@model WebPlatform.DataAccess.ViewModels.TransferTicketViewModel
<h2>Transfer ticket</h2>

<form asp-controller="Tickets" asp-action="TransferTicket" method="post">

    <input type="hidden" asp-for="TicketId" />
    <div class="form-group">
        <label asp-for="ReceiverEMail" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="ReceiverEMail" class="form-control" />
            <span asp-validation-for="ReceiverEMail" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Transfer" class="btn btn-default" />
        </div>
    </div>
</form>
