@model IEnumerable<WebPlatform.DataAccess.ViewModels.TicketViewModel>

<h2>Buy Tickets</h2>

@foreach (var ticket in Model)
{
<div class="row">
    <div class="col-md-3">@ticket.TicketId</div>
    <div class="col-md-3">
        @if (ticket.Sold)
            {
        <p>sold</p>
            }
            else
            {
        <p>for sale</p>
            }
    </div>
    <div class="col-md-3"><a asp-controller="Tickets" asp-action="TransferTicket" asp-route-ticketId="@ticket.TicketId">Transfer</a></div>
</div>
}
