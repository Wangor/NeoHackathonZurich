@model IdManagementPortal.ViewModels.CheckPassportViewModel
<h2>Check passportnumber</h2>

<form asp-controller="Check" asp-action="Check" method="post">
    <div class="form-group">
        <label asp-for="PassportNumber" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="PassportNumber" class="form-control" />
            <span asp-validation-for="PassportNumber" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Check" class="btn btn-default" />
        </div>
    </div>
</form>